Components {
  Test "test.py";
}

Messages {
  M(str);
}

Init {
  spawn(Test);
}

Exchange(c) {
  Test {
    M(y) {
      send(c, M(y));
    }
  }
}

Properties {
  AlwaysResponds =
    ImmAfter {
      "KRecv chan msg :: nil"
    }{
      "KSend chan msg :: nil"
    };

  OnlyResponds =
    ImmBefore {
      "KRecv chan msg :: nil"
    }{
      "KSend chan msg :: nil"
    };

  Any =
    Match {
      .*
    };

  Any2 =
    Match {
     .*.*
    };

  AnyOrAny =
    Match {
     .*|.*
    };

  MaybeOneOrAny =
    Match {
      .?|.*
    };

  AnyDisguise =
    Match {
      ([^send(_, M(_))]|[^recv(_, M(_))])*
    };

  NoSendTillRecv =
    Match {
      [^send(_, M(_))]*|.*[recv(_, M(_))][^send(_, M(_))]*
    };

  DonTest =
    Match {
      (.*[recv(_, M(_))])?[^send(_, M(_))]*
    };

  Never2Sends =
    Match {
      !.*[send(_, M(_))][send(_, M(_))].*
    };

  Never2SendsAlt =
    Match {
      ! .*[send(_, M(_))]{2}.*
    };
}
