Components {
  Test "test.py";
}

Messages {
  M(str);
}

Init {
  spawn(Test);
}

Exchange(c) {
  Test {
    M(y) {
      send(c, M(y));
    }
  }
}

Properties {
  AlwaysResponds =
    ImmAfter {
      "KRecv chan msg :: nil"
    }{
      "KSend chan msg :: nil"
    };

  OnlyResponds =
    ImmBefore {
      "KRecv chan msg :: nil"
    }{
      "KSend chan msg :: nil"
    };

  Any =
    Match {
      .*
    };

  Any2 =
    Match {
     .*.*
    };

  AnyOrAny =
    Match {
     .*|.*
    };

  MaybeOneOrAny =
    Match {
      .?|.*
    };

  AnyDisguise =
    Match {
      ([^send(M(_))]|[^recv(M(_))])*
    };

  NoSendTillRecv =
    Match {
      [^send(M(_))]*|.*[recv(M(_))][^send(M(_))]*
    };

  DonTest =
    Match {
      (.*[recv(M(_))])?[^send(M(_))]*
    };

  Never2Sends =
    Match {
      !.*[send(M(_))][send(M(_))].*
    };
}
