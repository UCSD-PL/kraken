Components {
  Main "test.py";
}

Messages {
  M1(num);
  M2(str);
}

Init {
  spawn(Main);
}

Exchange(c) {
  Main {
    M1(y) {
      send(c, M1(y));
    }

    M2(y) {
      send(c, M2(y));
    }
  }
}

Properties {
  AlwaysResponds =
    ImmAfter {
      "KRecv chan msg :: nil"
    }{
      "KSend chan msg :: nil"
    };

  OnlyResponds =
    ImmBefore {
      "KRecv chan msg :: nil"
    }{
      "KSend chan msg :: nil"
    };

  Any =
    Match {
      .*
    };

  Any2 =
    Match {
     .*.*
    };

  AnyOrAny =
    Match {
     .*|.*
    };

  MaybeOneOrAny =
    Match {
      .?|.*
    };

  AnyDisguise =
    Match {
      ([^send M1, send M2]|[^recv M1, recv M2])*
    };

  NoSendTillRecv =
    Match {
      [^send M1, send M2]*|.*[recv M1, recv M2][^send M1, send M2]*
    };
}
