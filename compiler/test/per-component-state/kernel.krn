State {
  chosenOne : str;
}

Components {
  Comp "comp.py" {
    id : str;
  }
}

Messages {
  WhoAmI    ();
  IAmChosen (str);
  IAmNormal (str);
}

Init {
  chosenOne = "A";
  spawn(Comp("B"));
  spawn(Comp("A"));
  spawn(Comp("C"));
}

Exchange(c) {
  Comp {
    WhoAmI() when (c@id =s chosenOne) {
      send(c, IAmChosen(c@id));
    } {
      send(c, IAmNormal(c@id));
    }
  }
}
