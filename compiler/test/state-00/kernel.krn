State {
  curtab : num;
}

Components {
  Tab       "tab.py";
  UserInput "userinput.sh";
}

Messages {
  ReqCurTab();
  CurTab(num);
}

Init {
  curtab := 0;
}

Exchange(c) {
  Tab {
    ReqCurTab() {
      curtab := curtab + 1;
      send(c, CurTab(curtab));
    }

    # ignore
    CurTab(n) {
    }
  }

  UserInput {
    # ignore
    CurTab(n) {
    }
  }
}
